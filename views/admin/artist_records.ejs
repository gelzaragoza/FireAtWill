<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Pirata+One&display=swap" rel="stylesheet">
    <title>Artists</title>
    <%-include('../css_js/login_css')%>
</head>
<body style="background-color:#708090;">
    <!-- Navigation-->
    <%-include('../sections/admin_nav')%>
    <!-- Page Content -->
    
    <div class="container" style="margin-top: 5%;">
        <h1 class="font-weight-light text-center text-lg-left mt-4 mb-0" style="color: white; font-family: 'Pirata One', cursive; letter-spacing: 10px; text-shadow: 2px 6px #272727;">Client Roster</h1>
    </div>
    <div class="container mt-5" >
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                  <div class="card-header h4">
                    Artist Information
                    <button class="btn btn-success btn-sm" style="float: right;" data-mdb-toggle="modal" data-mdb-target="#appointment"><i class="fa fa-plus"></i> Add</button>
                  </div>
                    <table class="table table-bordered">
                        <thead>
                          <tr>
                            <th class="text-center" scope="col">Artist's ID</th>
                            <th class="text-center" scope="col">Artist's Name</th>
                            <th class="text-center" scope="col">Contact Number</th>
                            <th class="text-center" scope="col">Address</th>
                            <th class="text-center" scope="col">Rates</th>
                            <th class="text-center" scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <%artists.forEach((artist)=>{%>
                              <tr>
                                <td class="text-center"><%=artist.Artist_ID%></td>
                                <td class="text-center"><%=artist.First_Name%> <%=artist.Last_Name%></td>
                                <td class="text-center"><%=artist.Contact_Number%></td>
                                <td class="text-center"><%=artist.City%> <%=artist.Street%> <%=artist.Address%></td>
                                <td class="text-center"><%=artist.Rate%></td>
                                <td class="text-center">
                                    <!-- Update -->
                                    <button type="button" class="btn btn-success btn-floating" data-mdb-ripple-color="dark" data-mdb-toggle="modal" data-mdb-target="#artist<%=artist.Artist_ID%>"><i class="fas fa-user-edit"></i></button>
                                </td>
                              </tr>
                          <%})%>
                        </tbody>
                      </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div
    class="modal fade"
    id="appointment"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
    >
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Artist Information</h5>
                <button
                type="button"
                class="btn-close"
                data-mdb-dismiss="modal"
                aria-label="Close"
                ></button>
            </div>
            <div class="modal-body">
              <div class="row">
                  <div class="col-md-12">
                    <form action="/admin/artist" method="POST">
                      <!-- First Name input -->
                      <div class="form-outline mb-4">
                        <input type="text" id="form5Example2" class="form-control" name="firstname"/>
                        <label class="form-label" for="form5Example1">First Name</label>
                      </div>
                      <!-- Artist's Last Name -->
                      <div class="form-outline mb-4">
                        <input type="text" id="form5Example1" class="form-control" name="lastname"/>
                        <label class="form-label" for="form5Example1">Last Name</label>
                      </div>
                      <!-- Contact Number -->
                      <div class="form-outline mb-4">
                        <input type="text" id="form5Example3" class="form-control" name="contactnumber"/>
                        <label class="form-label" for="form5Example1">Contact Number</label>
                      </div>
                      <!-- City -->
                      <div class="form-outline mb-4">
                        <input type="text" id="form5Example4" class="form-control" name="city"/>
                        <label class="form-label" for="form5Example1">City</label>
                      </div>
                      <!-- Street -->
                      <div class="form-outline mb-4">
                        <input type="text" id="form5Example4" class="form-control" name="street"/>
                        <label class="form-label" for="form5Example1">Street</label>
                      </div>
                      <!-- Address -->
                      <div class="form-outline mb-4">
                        <input type="text" id="form5Example4" class="form-control" name="address"/>
                        <label class="form-label" for="form5Example1">Address</label>
                      </div>
                      <!-- Rates -->
                      <div class="form-outline mb-4">
                        <input type="text" id="form5Example5" class="form-control" name="rates"/>
                        <label class="form-label" for="form5Example1">Rates</label>
                      </div>

                      <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                      </form>
                  </div>
              </div>
          </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
                Close
                </button>
            </div>
            </div>
        </div>
    </div>

    <%artists.forEach((artist)=>{%>

      <!-- Update Modal -->
      <div
      class="modal fade"
      id="artist<%=artist.Artist_ID%>"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
      >
          <div class="modal-dialog">
              <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Artist <%=artist.Artist_ID%> Update Information</h5>
                  <button
                  type="button"
                  class="btn-close"
                  data-mdb-dismiss="modal"
                  aria-label="Close"
                  ></button>
              </div>
              <div class="modal-body">
                  <div class="row">
                      <div class="col-md-12">
                        <form action="/admin/artistupdate?id=<%=artist.Artist_ID%>" method="POST">
                          <!-- First Name input -->
                          <div class="form-outline mb-4">
                            <input type="text" id="form5Example2" class="form-control" name="firstname" value="<%=artist.First_Name%>"/>
                            <label class="form-label" for="form5Example1">First Name</label>
                          </div>
                          <!-- Client's Last Name -->
                          <div class="form-outline mb-4">
                            <input type="text" id="form5Example1" class="form-control" name="lastname" value="<%=artist.Last_Name%>"/>
                            <label class="form-label" for="form5Example1">Last Name</label>
                          </div>
                          <!-- Contact Number -->
                          <div class="form-outline mb-4">
                            <input type="text" id="form5Example3" class="form-control" name="contactnumber" value="<%=artist.Contact_Number%>"/>
                            <label class="form-label" for="form5Example1">Contact Number</label>
                          </div>
                          <!-- City -->
                          <div class="form-outline mb-4">
                            <input type="text" id="form5Example4" class="form-control" name="city" value="<%=artist.City%>"/>
                            <label class="form-label" for="form5Example1">City</label>
                          </div>
                          <!-- Address -->
                          <div class="form-outline mb-4">
                            <input type="text" id="form5Example4" class="form-control" name="street" value="<%=artist.Street%>"/>
                            <label class="form-label" for="form5Example1">Street</label>
                          </div>
                          <!-- Address -->
                          <div class="form-outline mb-4">
                            <input type="text" id="form5Example4" class="form-control" name="address" value="<%=artist.Address%>"/>
                            <label class="form-label" for="form5Example1">Address</label>
                          </div>
                          <!-- Remarks -->
                          <div class="form-outline mb-4">
                            <input type="text" id="form5Example5" class="form-control" name="rates" value="<%=artist.Rates%>"/>
                            <label class="form-label" for="form5Example1">Rates</label>
                          </div>
  
                          <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block">Update</button>
                          </form>
                      </div>
                  </div>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">
                  Close
                  </button>
              </div>
              </div>
          </div>
      </div> 
  
      <%})%>

    <%-include('../css_js/login_js')%>
</body>
</html>